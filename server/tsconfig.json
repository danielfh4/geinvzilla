{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "typeRoots": ["./node_modules/@types", "./types"],  // <- inclui sua pasta /types
    "types": ["node"] // <- não precisa incluir "./types" aqui
  },
  "include": ["server", "types"], // <- Garante que os arquivos da pasta 'types' são processados
  "exclude": ["node_modules"]
}